<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailDistributor">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/profil"
            android:src="@drawable/ic_action_name"/>

        <View
            android:layout_width="match_parent"
            android:layout_below="@id/profil"
            android:layout_height="2dp"
            android:id="@+id/garis"
            android:background="@color/windowBackground"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dd_Id"
            android:layout_below="@id/garis"
            android:text="ID Distributor : 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorfont"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dd_nama"
            android:textSize="20sp"
            android:text="Muthia Afrinisa"
            android:layout_below="@id/dd_Id"
            android:textColor="@color/colorfont"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/dd_noWa"
            android:text="081267597033"
            android:layout_below="@id/dd_nama"
            android:textColor="@color/colorfont"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dd_Des"
            android:textSize="20sp"
            android:text="Ikan Segar"
            android:layout_below="@id/dd_noWa"
            android:textColor="@color/colorfont"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>



    </RelativeLayout>


</LinearLayout>