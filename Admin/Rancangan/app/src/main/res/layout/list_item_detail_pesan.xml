<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    app:cardBackgroundColor="@color/toolbar">


    <RelativeLayout
        android:background="@color/divider"
        android:layout_width="wrap_content"
        android:layout_height="40dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dc_namaPro"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/colorTable1"
                android:gravity="center"
                android:text="Ikan Tongkol"
                android:textColor="@color/colorfont" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:id="@+id/dc_totPro"
                android:background="@color/colorTable3"
                android:text="1"
                android:textColor="@color/colorfont"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:id="@+id/dc_totHar"
                android:background="@color/colorTable1"
                android:text="Rp. 10000"
                android:textColor="@color/colorfont"
                android:gravity="center"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>